.model small
.stack 100h  

.data
str db 'I love Bangladesh $' 
num1 db 2

.code
main proc
    
    ; 1-> single key input
    ; 2-> single character output
    ; 3-> character string output
    
    mov ax,@data
    mov ds,ax
    
    mov ah,9      ; string output function
    lea dx,str
    int 21h
    
    mov ah,2  
    add num1,48
    mov dl,num1
    int 21h  
    
    exit:
    mov ah,4ch
    int 21h
    main endp
end main

; output: I love Bangladesh 2
       
       
       
